<!-- list_item.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/image_library_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/playlist_06"
        android:layout_centerInParent="true"
        android:backgroundTint="#a7a7a7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/name_library_title"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:text="Top 50 - Vietnam "
            android:layout_gravity="center"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/artist_library_description"
            android:layout_width="match_parent"
            android:text="Playlist - Spotify"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:textColor="#a0a0a0"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
