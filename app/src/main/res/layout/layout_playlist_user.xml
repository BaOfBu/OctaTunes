<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="4dp"
    android:background="@color/background_color"
    android:padding="4dp">

    <ImageView
        android:id="@+id/playlist_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_spotify" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/playlist_image"
        android:layout_marginStart="10dp">
        <TextView
            android:id="@+id/playlist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Tên ca khúc"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:fontFamily="@font/main_font"/>

        <RelativeLayout
            android:id="@+id/layout_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playlist_name"
            android:padding="4dp">
            <TextView
                android:id="@+id/number_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:fontFamily="@font/main_font"/>
            <TextView
                android:id="@+id/text_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/number_like"
                android:layout_marginStart="4dp"
                android:text="lượt thích"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:fontFamily="@font/main_font"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>