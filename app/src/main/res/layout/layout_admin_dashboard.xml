<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <!-- Header -->
    <include layout="@layout/layout_toolbar_admin" />

    <ImageView
        android:id="@+id/spotify_icon"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_spotify"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/main_font"
        android:text="OctaTunes Manager"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:padding="20dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_track_manager"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:fontFamily="@font/main_font"
            android:backgroundTint="@color/spotify_color"
            android:background="@drawable/button_border"
            android:text="Quản lý ca khúc"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_user_manager"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/main_font"
            android:background="@drawable/button_border"
            android:text="Quản lý người dùng"/>
    </LinearLayout>


</LinearLayout>
