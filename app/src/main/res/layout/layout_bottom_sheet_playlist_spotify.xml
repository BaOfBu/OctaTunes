<!-- layout_bottom_sheet.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:background="@drawable/radius_background"
    android:backgroundTint="#242424"
    android:clipChildren="false"
    android:clipToOutline="false"
    >

    <View

        android:layout_width="30dp"
        android:layout_height="5dp"
        android:background="@drawable/line_radius"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:padding="16dp"
        >

    </View>

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:paddingHorizontal="0dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/music_01" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_title"
                android:text="Top 50 - Vietnam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="15dp"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/item_artist"
                android:text="by Spotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_marginLeft="-24dp"
        android:layout_marginRight="-24dp"
        android:layout_width="1000dp"
        android:layout_height="0.5dp"
        android:background="#a7a7a7"
        android:backgroundTint="#a7a7a7">

    </View>
    <TextView
        android:padding="16dp"
        android:id="@+id/action_listen_ad_free"
        android:layout_width="match_parent"
        android:textColor="#fff"
        android:textSize="16dp"
        android:drawableTint="#a7a7a7"
        android:layout_height="wrap_content"
        android:text="Listen to music ad-free"
        android:drawableStart="@drawable/baseline_diamond_24"
        android:drawablePadding="12dp"
        android:paddingVertical="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground" />
    <TextView
        android:padding="16dp"
        android:id="@+id/add_to_library"
        android:layout_width="match_parent"
        android:textSize="16dp"
        android:textColor="#fff"
        android:drawableTint="#a7a7a7"
        android:layout_height="wrap_content"
        android:text="Add to your library"
        android:drawableStart="@drawable/round_add_circle_outline_24"
        android:drawablePadding="12dp"
        android:paddingVertical="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground" />

    <TextView
        android:padding="16dp"
        android:id="@+id/download"
        android:layout_width="match_parent"
        android:textSize="16dp"
        android:textColor="#fff"
        android:drawableTint="#a7a7a7"
        android:layout_height="wrap_content"
        android:text="Download"
        android:drawableStart="@drawable/baseline_arrow_circle_down_24"
        android:drawablePadding="12dp"
        android:paddingVertical="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground" />
    <TextView
        android:padding="16dp"
        android:id="@+id/add_to_other_playlist"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:textColor="#fff"
        android:drawableTint="#a7a7a7"
        android:layout_height="wrap_content"
        android:text="Add to other playlist"
        android:drawableStart="@drawable/round_add_circle_outline_24"
        android:drawablePadding="12dp"
        android:paddingVertical="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground" />
    <TextView
        android:padding="16dp"
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:textSize="16dp"
        android:textColor="#fff"
        android:drawableTint="#a7a7a7"
        android:layout_height="wrap_content"
        android:text="Share"
        android:drawableStart="@drawable/baseline_share_24"
        android:drawablePadding="12dp"
        android:paddingVertical="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground" />
</LinearLayout>
