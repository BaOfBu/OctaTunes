<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:backgroundTint="#242424"
    android:background="@drawable/radius_background"
    android:layout_height="480dp">
    <View
        android:layout_width="30dp"
        android:layout_height="5dp"
        android:background="@drawable/line_radius"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:padding="16dp"
        >
    </View>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="24dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_spotify_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Premium"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/download_bottom_sheet_image"
        android:layout_width="160dp"
        android:layout_gravity="center"
        android:layout_height="160dp"
        android:src="@drawable/playlist_06"/>
    <TextView
        android:id="@+id/download_bottom_sheet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:text="Want to download Top 50 - Vietnam?"
    />
    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="#a7a7a7"
        android:textSize="14dp"

        android:layout_marginTop="10dp"
        android:text="Download music to listen without Wi-Fi and save your mobile data with Premium."
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Explore Premium"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textColor="@color/black"
        android:backgroundTint="#1ed760"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
    />
    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="19dp"
        android:text="Stay on Spotify Free"
        android:layout_height="wrap_content"/>
</LinearLayout>