<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:padding="4dp">

    <RelativeLayout
        android:id="@+id/left_album"
        android:layout_width="190dp"
        android:layout_height="260dp">

        <ImageView
            android:id="@+id/album_image_left"
            android:layout_width="190dp"
            android:layout_height="200dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/ic_spotify" />

        <TextView
            android:id="@+id/album_name_left"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/album_image_left"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="Album Name"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/main_font"/>

        <TextView
            android:id="@+id/album_artist_left"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/album_name_left"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="Album Artist"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/main_font"/>

        <TextView
            android:id="@+id/published_year_left"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/album_artist_left"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="Published Year"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/main_font"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_album"
        android:layout_width="190dp"
        android:layout_height="260dp"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/album_image_right"
            android:layout_width="1900dp"
            android:layout_height="200dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/ic_spotify" />

        <TextView
            android:id="@+id/album_name_right"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/album_image_right"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="Album Name"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/main_font"/>

        <TextView
            android:id="@+id/album_artist_right"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/album_name_right"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="Album Artist"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/main_font"/>

        <TextView
            android:id="@+id/published_year_right"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/album_artist_right"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="Published Year"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/main_font"/>
    </RelativeLayout>

</RelativeLayout>